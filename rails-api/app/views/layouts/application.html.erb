<!DOCTYPE html>
<html>
  <head>
    <title>MealAgent</title>
    <meta charset="UTF-8">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Fixed navbar -->
    <nav class="navbar navbar-default navbar-expand-xl navbar-light navbar-fixed-top">
    	<div class="navbar-header d-flex">
        <%= link_to fa_icon("list-alt", text: "Meal Agent"), root_path, class: "navbar-brand" %>
    		<button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle navbar-toggler ml-auto">
    			<span class="navbar-toggler-icon"></span>
    			<span class="icon-bar"></span>
    			<span class="icon-bar"></span>
    			<span class="icon-bar"></span>
    		</button>
    	</div>
    	<!-- Collection of nav links, forms, and other content for toggling -->
    	<div id="navbarCollapse" class="collapse navbar-collapse justify-content-start">
    		<ul class="nav navbar-nav">
          <li class="nav-item"><%= link_to fa_icon("shopping-cart", text: "Meals"), meals_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to fa_icon("book", text: "Orders"), orders_path, class: "nav-link" %></li>
    		</ul>
        <% if user_signed_in? %>
      		<ul class="nav navbar-nav navbar-right ml-auto">
      			<li class="nav-item dropdown">
      				<a href="#" data-toggle="dropdown" class="nav-link dropdown-toggle user-action"><%= image_tag current_user.image, class: "avatar" %> <%= current_user.name %> <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <% if current_user.shop_owner? %>
                  <%= link_to fa_icon("shopping-bag", text: "My Shops"), shops_path, class: "dropdown-item" %>
                <% else %>
                  <%= link_to fa_icon("shopping-bag", text: "New shop"), new_shop_path, class: "dropdown-item" %>
                <% end %>
      					<li class="divider dropdown-divider"></li>
                <li><%= link_to fa_icon("power-off", text: "Logout"), destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
      				</ul>
      			</li>
      		</ul>
        <% else %>
          <ul class="nav navbar-nav navbar-right ml-auto">
            <li class="nav-item dropdown">
              <%= link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path, class: "nav-link user-action" %>
      			</li>
          </ul>
        <% end %>
    	</div>
    </nav>

    <% if flash[:error] %>
      <div class="alert alert-danger" role="alert">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="alert alert-info" role="alert">
        <p><%= flash[:alert] %></p>
      </div>
    <% end %>

    <div id="container" class="container">
      <%= yield %>
    </div>

  </body>
</html>
