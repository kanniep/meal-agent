<div class="page-header text-center mt-5">
  <h1>New Meal</h1>
</div>
<div class="text-center" style="padding:50px 0">
	<!-- Main Form -->
  <%= form_for @meal, id: "login-form", class: "form-horizontal denser", url: shop_meals_url(@shop, @meal) do |f| %>
		<% if @meal.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@meal.errors.count, "error") %> prohibited this meal from being saved:</h2>

				<ul>
				<% @meal.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
				</ul>
			</div>
		<% end %>
		<fieldset>
			<div class="form-group control-group string_type">
        <%= f.text_field :name, class: "col-sm-10 controls", id: "lg_username", placeholder: :name %>
			</div>
			<div class="form-group control-group string_type">
        <%= f.text_field :meal_type, class: "col-sm-10 controls", id: "lg_password", placeholder: :meal_type %>
			</div>
			<div class="form-group control-group string_type">
        <%= f.text_area :description, class: "col-sm-10 controls", placeholder: :description %>
			</div>
			<div class="form-group control-group">
        <%= f.number_field :price, class: "col-sm-10 controls", placeholder: :price %>
			</div>
      <div class="form-group control-group">
        <%= f.label :image, class: "col-sm-2 control-label"%>
        <%= f.file_field(:image, class: "col-sm-10 controls") %>
			</div>
		</fieldset>
		<div class="form-group form-actions">
			<%= f.submit class: "btn btn-primary" %>
		</div>
	<% end %>
	<!-- end:Main Form -->
</div>

<%= link_to 'Back', edit_shop_path(@shop) %>
