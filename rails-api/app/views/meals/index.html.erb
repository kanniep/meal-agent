<p id="notice"><%= notice %></p>

<% if current_user.shop_owner? %>
  <%= link_to 'My shops', shops_path %>
<% else %>
  <%= link_to 'New shop', new_shop_path %>
<% end %>

<h1>Meals</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Price</th>
      <th>Description</th>
      <th>Shop</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.name %></td>
        <td><%= meal.meal_type %></td>
        <td><%= meal.price %></td>
        <td><%= meal.description %></td>
        <td><%= meal.shop.name %></td>
        <td><%= link_to 'Show', meal %></td>
        <td><%= link_to 'Order', orders_path(order: {meal_id: meal}), :method=> :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
