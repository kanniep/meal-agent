<h1>Editing Meal</h1>

<%= form_for @meal, url: shop_meal_url(@shop, @meal), method: :patch do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :meal_type %>
    <%= f.text_field :meal_type %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>

  <div class="actions">
    <%= f.submit "Create Meal" %>
  </div>
<% end %>

<%= link_to 'Show', @meal %> |
<%= link_to 'Back', meals_path %>
