<p id="notice"><%= notice %></p>

<% if @meal.image.attached? %>
  <%= image_tag @meal.image, class: "img-fluid rounded mx-auto d-block" %>
<% end %>

<p>
  <strong>Name:</strong>
  <%= @meal.name %>
</p>

<p>
  <strong>Type:</strong>
  <%= @meal.meal_type %>
</p>

<p>
  <strong>Description:</strong>
  <%= @meal.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @meal.price %>
</p>

<%= link_to 'Back', meals_path %>
